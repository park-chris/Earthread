<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SettingNicknameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/pick_picture"
        android:textColor="@color/white"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="200dp"
        android:contentDescription="@string/pick_picture"
        android:layout_height="200dp" />


    <TextView
        android:id="@+id/validation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/profile_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/peach"
        android:textColor="@color/peach"
        android:gravity="center"
        android:hint="@string/nickname"
        android:maxLength="10"
        android:maxLines="1"
        android:importantForAutofill="no"
        android:textColorHint="@color/peach"
        android:textSize="20sp"
        android:inputType="text" />





    <Button
        android:id="@+id/save_button"
        android:layout_width="200dp"
        android:text="@string/save"
        android:background="@drawable/gradient_border_box"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"  />

</LinearLayout>

</layout>
